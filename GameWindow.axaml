			</Border>
			<Border Grid.Row="3" Grid.Column="3" Margin="5 5 10 10" CornerRadius="2" Background="#f0e4dc">
				<TextBlock Name="Block33" Text="33" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="Black"/>
			</Border>
		</Grid>
		</Border>
		<Button Name="RightButton" Click="MoveRight" HorizontalAlignment="Center" Background="#baaca1" Foreground="#fffdf6">
			Вправо
		</Button>
		<Button Name="LeftButton" Click="MoveLeft" HorizontalAlignment="Center" Background="#baaca1" Foreground="#fffdf6">
			Влево
		</Button>
		<Button Name="UpButton" HorizontalAlignment="Center" Background="#baaca1" Foreground="#fffdf6">
			Вверх
		</Button>
		<Button Name="DownButton" HorizontalAlignment="Center" Background="#baaca1" Foreground="#fffdf6">
